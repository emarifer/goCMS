    "version": "0.2.0",
    "configurations": [
        {
            "name": "AdminCMS",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/gocms_admin",
            "cwd": "${workspaceFolder}",
            "env": {
                "DATABASE_HOST": "localhost",
                "DATABASE_PORT": "3306",
                "DATABASE_USER": "root",
                "DATABASE_PASSWORD": "my-secret-pw",
                "DATABASE_NAME": "cms_db",
                "IMAGE_DIRECTORY": "${workspaceFolder}/media",
                "CONFIG_FILE_PATH": "${workspaceFolder}/settings/gocms_config.toml"
            }
        },
        {
            "name": "goCMS",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/gocms",
            "cwd": "${workspaceFolder}",
            "env": {
                "DATABASE_HOST": "localhost",
                "DATABASE_PORT": "3306",
                "DATABASE_USER": "root",
                "DATABASE_PASSWORD": "my-secret-pw",
                "DATABASE_NAME": "cms_db",
                "IMAGE_DIRECTORY": "${workspaceFolder}/media",
                "CONFIG_FILE_PATH": "${workspaceFolder}/settings/gocms_config.toml"
            }
        }
    ]
}